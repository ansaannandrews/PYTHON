#WHILE
i=1
while i<=5:
    print('*' * i)
    i += 1

#GUESSING GAME
i=1
while i<=3:
    guess = int(input('Guess'))
    if guess == 9:
       print('Ya you got it')
       break
    else:
        i+=1

#CAR GAME

command = ''
started = False
stoped = False
while True:
    command = input("")
    if command == 'start':
        if started:
            print('HEY Car is already started')
        else:
            started = True
            print('car started')
    elif command == 'stop':
        if stoped:
            print('HEY Car is already stoped')
        else:
            stoped = True
            print('car stopped')
    elif command == 'quit':
        print('program quit')
        break
    elif command == 'help':
        print("INFORMATION")
    else:
        print("SORRY YOU ENTERED WRONG")

#for loop
for item in 'PYTHON':
    print(item)

for item in ['a','b','c']:
    print(item)

for item in range(10):
    print(item)

for item in range(3,23):
    print(item)

for item in range(3,23,2):
    print(item)

price = [10, 20, 30]
totalp = 0
for item in price:
    totalp += item
print(f'SUM = {totalp}')

#NESTED LOOP
for x in range(3):
    for y in range(3):
        print(f'({x} , {y})')

#LISTS
#PRGM TO FIND LARGEST NUMBER IN A LIST
lists = [3,8,2,876,0]
max= lists[0]
for i in lists:
    if i > max:
        max = i
print(max)
